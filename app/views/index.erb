<section class="home">
  <ol>
    <% @matched.each do |match|%>
    <ul>
      <li><h2><a href="/user/<%= match[0].id%>"><%= match[0].name.capitalize %></a><h2></li><hr>
      <a href="/post/<%=match[2]%>"><li><%= match[1].capitalize %></li></a>
      <hr>
      <li><p>Comments: <%= match[4].content %>...</p></li><hr>
      <li><a href="/"><h6>Total Comments: <%= match[3].count %></h6></a></li>
    </ul>
    <%end%>
  </ol>
</section>

