<section>

<% @user_page %>
<h4><%= @user.name.capitalize %></h4>
<h4><%= @user.email.capitalize %></h4>

<% if @posts.length > 0 %>
<h5>Your Posts:</h5>
<ul>
<% @posts.each do |post| %>
<li><%= post.title.capitalize %></li>
<li><%= post.content.capitalize %></li>
<% end %>
</ul>
<% end %>

<% if @comments.length > 0 %>
<h5>Your Comments:</h5>
<ul>
<% @comments.each do |comment| %>
<li><%= comment.title.capitalize %></li>
<li><%= comment.content.capitalize %></li>
<% end %>
</ul>
<% end %>


<% if @post_comments.length > 0 %>
<h5>Comments on Your Posts:</h5>
<ul>
<% @post_comments.each do |post_comment| %>
<li><%= post_comment.title.capitalize %></li>
<li><%= post_comment.content.capitalize %></li>
<% end %>
</ul>
<% end %>

</section>
